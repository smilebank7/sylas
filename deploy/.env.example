# =============================================================================
# Sylas self-hosted deployment — environment variables
# Copy this file to .env and fill in the values.
#
# AUTH NOTE: LLM tokens (Anthropic OAuth, OpenAI) and git credentials are
# managed via host bind mounts, NOT environment variables.
# Run `scripts/auth-bootstrap.sh` on the host before first start.
# =============================================================================

# --- Required ----------------------------------------------------------------

# Linear OAuth app credentials (https://linear.app/settings/api/applications)
LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=
LINEAR_WEBHOOK_SECRET=
LINEAR_DIRECT_WEBHOOKS=true

# GitHub personal access token — fallback if bind mount not present.
# Preferred: use scripts/auth-bootstrap.sh to write state/git-credentials.
GITHUB_TOKEN=
GH_TOKEN=

# --- Server ------------------------------------------------------------------

SYLAS_SERVER_PORT=3456
SYLAS_BASE_URL=https://sylas.example.com
SYLAS_HOST_EXTERNAL=true

# Domain for Traefik routing (used in docker-compose.yml labels)
SYLAS_DOMAIN=sylas.example.com

# --- OpenCode / oh-my-opencode -----------------------------------------------

SYLAS_OPENCODE_REPORTED_MODEL=anthropic/claude-opus-4-6
SYLAS_OPENCODE_PLUGINS=oh-my-opencode
