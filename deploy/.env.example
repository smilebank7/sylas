# =============================================================================
# Cyrus self-hosted deployment â€” environment variables
# Copy this file to .env and fill in the values.
# =============================================================================

# --- Required ----------------------------------------------------------------

# Linear OAuth app credentials (https://linear.app/settings/api/applications)
LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=
LINEAR_WEBHOOK_SECRET=
LINEAR_DIRECT_WEBHOOKS=true

# GitHub personal access token (repo + workflow scopes)
GITHUB_TOKEN=
GH_TOKEN=          # alias used by gh CLI

# Anthropic OAuth token (from Claude Max subscription)
# This is seeded into OpenCode's auth.json on first run.
# Format: sk-ant-oat01-...
ANTHROPIC_API_KEY=

# --- Server ------------------------------------------------------------------

CYRUS_SERVER_PORT=3456
CYRUS_BASE_URL=https://cyrus.example.com
CYRUS_HOST_EXTERNAL=true

# Domain for Traefik routing (used in docker-compose.yml labels)
CYRUS_DOMAIN=cyrus.example.com

# --- OpenCode / oh-my-opencode -----------------------------------------------

# Model string reported in Linear activity notifications.
# Should match the primary model oh-my-opencode uses (e.g. anthropic/claude-opus-4-6).
CYRUS_OPENCODE_REPORTED_MODEL=anthropic/claude-opus-4-6

# Comma-separated plugin names reported in Linear activity.
CYRUS_OPENCODE_PLUGINS=oh-my-opencode

# --- Optional ----------------------------------------------------------------

# Uncomment to add additional AI provider subscriptions.
# These are registered via `docker exec -it cyrus opencode auth login`
# and persisted in the opencode-data Docker volume.
# Supported: OpenAI (ChatGPT Plus/Pro), Google, OpenRouter, etc.
