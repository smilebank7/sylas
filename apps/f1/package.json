{
	"name": "sylas-f1",
	"version": "0.1.0",
	"type": "module",
	"description": "F1 Testing Framework CLI for Sylas",
	"main": "dist/src/cli.js",
	"types": "dist/src/cli.d.ts",
	"bin": {
		"f1": "./f1"
	},
	"scripts": {
		"build": "tsc",
		"start": "bun run dist/src/cli.js",
		"server": "bun run server.ts",
		"server:dev": "bun --watch server.ts",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run --passWithNoTests",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "cd ../.. && pnpm build"
	},
	"files": [
		"dist",
		"f1",
		"server.ts",
		"README.md",
		"CLAUDE.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"commander": "^14.0.2",
		"sylas-claude-runner": "workspace:*",
		"sylas-core": "workspace:*",
		"sylas-edge-worker": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "^5.3.3",
		"vitest": "^3.1.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
