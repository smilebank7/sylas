{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"sylas-core": ["packages/core"],
			"sylas-claude-parser": ["packages/claude-parser"],
			"sylas-linear-client": ["packages/linear-client"],
			"sylas-history-stream": ["packages/history-stream"],
			"sylas-edge-worker": ["packages/edge-worker"],
			"sylas-claude-runner": ["packages/claude-runner"],
			"sylas-codex-runner": ["packages/codex-runner"],
			"sylas-cursor-runner": ["packages/cursor-runner"],
			"sylas-gemini-runner": ["packages/gemini-runner"],
			"sylas-mcp-tools": ["packages/mcp-tools"],
			"sylas-simple-agent-runner": ["packages/simple-agent-runner"],
			"sylas-config-updater": ["packages/config-updater"],
			"sylas-linear-event-transport": ["packages/linear-event-transport"],
			"sylas-opencode-runner": ["packages/opencode-runner"]
		}
	},
	"exclude": ["node_modules", "dist", "build"]
}
