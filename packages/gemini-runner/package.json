{
	"name": "sylas-gemini-runner",
	"version": "0.2.21",
	"description": "Gemini CLI process spawning and management for Sylas",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && cp -r src/prompts dist/prompts",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@linear/sdk": "^60.0.0",
		"sylas-claude-runner": "workspace:*",
		"sylas-core": "workspace:*",
		"sylas-simple-agent-runner": "workspace:*",
		"dotenv": "^16.6.1",
		"fs-extra": "^11.3.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@google/gemini-cli-core": "0.17.0",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.0.0",
		"typescript": "^5.3.3",
		"vitest": "^3.1.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
