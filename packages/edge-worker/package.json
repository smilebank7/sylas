{
	"name": "sylas-edge-worker",
	"version": "0.2.21",
	"description": "Unified edge worker for processing Linear issues with Claude",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"prompt-template-v2.md",
		"prompt-template.md",
		"label-prompt-template.md",
		"prompts"
	],
	"scripts": {
		"build": "tsc && npm run copy-prompts",
		"copy-prompts": "mkdir -p dist/prompts/subroutines && cp -r src/prompts/subroutines/*.md dist/prompts/subroutines/ && cp label-prompt-template.md dist/ && cp -r prompts dist/",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@linear/sdk": "^64.0.0",
		"@ngrok/ngrok": "^1.5.1",
		"chokidar": "^4.0.3",
		"sylas-claude-runner": "workspace:*",
		"sylas-cloudflare-tunnel-client": "workspace:*",
		"sylas-codex-runner": "workspace:*",
		"sylas-config-updater": "workspace:*",
		"sylas-core": "workspace:*",
		"sylas-cursor-runner": "workspace:*",
		"sylas-gemini-runner": "workspace:*",
		"sylas-opencode-runner": "workspace:*",
		"sylas-github-event-transport": "workspace:*",
		"sylas-linear-event-transport": "workspace:*",
		"sylas-mcp-tools": "workspace:*",
		"sylas-slack-event-transport": "workspace:*",
		"sylas-simple-agent-runner": "workspace:*",
		"fastify": "^5.7.3",
		"fastify-mcp": "^2.1.0",
		"file-type": "^18.7.0",
		"ignore": "^7.0.5",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "^3.1.4",
		"axios": "^1.6.0",
		"typescript": "^5.3.3",
		"vitest": "^3.1.4",
		"vitest-mock-extended": "^3.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
