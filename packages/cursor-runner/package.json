{
	"name": "sylas-cursor-runner",
	"version": "0.2.21",
	"description": "Cursor Agent CLI process wrapper for Sylas",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "node ../../node_modules/.pnpm/node_modules/vitest/vitest.mjs",
		"test:run": "node ../../node_modules/.pnpm/node_modules/vitest/vitest.mjs run --passWithNoTests",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"sylas-core": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "^5.3.3",
		"vitest": "^3.1.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
