{
	"name": "sylas-monorepo",
	"version": "1.0.1",
	"private": true,
	"description": "Monorepo for Sylas - Linear Claude Agent integration",
	"packageManager": "pnpm@10.13.1",
	"type": "module",
	"scripts": {
		"build": "pnpm -r --filter='!@sylas/electron' build",
		"dev": "pnpm -r --parallel dev",
		"test": "pnpm -r test",
		"lint": "biome check",
		"format": "biome check --write --unsafe",
		"test:packages": "pnpm --filter './packages/*' test",
		"test:packages:run": "pnpm --filter './packages/*' test:run",
		"test:apps": "pnpm --filter './apps/*' test",
		"typecheck": "pnpm -r typecheck",
		"prepare": "husky"
	},
	"keywords": [
		"linear",
		"claude",
		"linear-agent",
		"sylas",
		"anthropic",
		"ai",
		"agent",
		"monorepo"
	],
	"author": "Ceedar",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/smilebank7/sylas"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@linear/sdk": "60.0.0"
	},
	"pnpm": {
		"overrides": {
			"jws": ">=4.0.1",
			"@modelcontextprotocol/sdk": ">=1.25.2",
			"semver": ">=7.5.2",
			"qs": ">=6.14.1",
			"vite": ">=7.1.11"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"biome check --write --unsafe"
		]
	}
}
